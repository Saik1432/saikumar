import java.util.Scanner;
 
public class ReverseAddPalindrome
{
    //Method To Reverse A Number
     
    static int reverseNumber(int number)
    {
        int reverse = 0;
         
        int rem = 0;
         
        while (number != 0)
        {
            rem = number % 10;
             
            reverse = (reverse*10) + rem;
             
            number = number/10;
        }
